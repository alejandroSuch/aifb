{
  "compilerOptions": {
    "declaration": false,
    "diagnostics": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "target": "es6",
    "lib": [
      "es6", "dom"
    ],
    "rootDir": "./src",
    "listEmittedFiles": false,
    "outDir": "./dist",
    "watch": false
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.*"
  ]
}